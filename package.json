{
  "name": "code-breaker-project",
  "version": "1.0.0",
  "description": "Code Breaker Project",
  "private": true,
  "author": "Cristina Tarantino",
  "homepage": "https://cristytarantino.github.io/CodeBreakerProject/",
  "scripts": {
    "start": "browser-sync start --server ./src --files ./src",
    "test": "mocha -t 20000 --compilers js:babel-register test/*.spec.js",
    "test-watch": "npm test -- --bail --watch",
    "deploy:github-pages": "git subtree push --prefix src origin gh-pages",
    "cover": "nyc mocha -t 20000 test/*.spec.js"
  },
  "license": "MIT",
  "devDependencies": {
    "ajv": "^6.5.2",
    "ajv-keywords": "^3.2.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.24.5",
    "chai": "^3.5.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "istanbul": "^0.4.5",
    "jsdom": "^9.4.1",
    "mocha": "^3.0.1",
    "nyc": "^11.9.0",
    "sinon": "^1.17.5"
  },
  "engines": {
    "node": ">=6"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/assets/main.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "eslintConfig": {
    "extends": "google",
    "env": {
      "browser": true,
      "node": true
    }
  }
}
